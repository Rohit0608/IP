<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/background_light"
    tools:context=".About">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/utkimage"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Utkarsh Rai"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            tools:background="@android:color/background_light" />

        <ImageView
            android:id="@+id/utk"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/utkimage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/uk"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="245dp"
            android:textSize="15dp"
            android:id="@+id/utkinfo"
            android:text="@string/utkinfo"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/roh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/utkinfo"
            android:text="Rohit Gurijala"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/rohimage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/roh"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:src="@drawable/roh"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/rohimage"
            android:textSize="15dp"
            android:id="@+id/rohinfo"
            android:text="@string/rohinfo"
            android:textColor="@android:color/black"/>



    </RelativeLayout>
    </ScrollView>

</RelativeLayout>